        "drizzle-orm": "^0.36.4",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "mysql2": "^3.12.0",
        "resend": "^6.6.0",
        "translation-check": "^1.1.0",
        "typescript": "^5.7.3",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
