        "@types/jest": "^29.5.14",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/multer": "^2.0.0",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.55.0",
        "@typescript-eslint/parser": "^8.55.0",
        "drizzle-kit": "^0.18.1",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
