{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "..",
        "rootDirs": [ "./src", "../shared" ],
        "typeRoots": [ "../node_modules/@types", "./node_modules/@types", "src/@types" ],
        "allowSyntheticDefaultImports": true
    },
    "include": [ "src/**/*", "src/@types", "../shared/**/*" ],
    "exclude": [ "node_modules" ],
}
