{
    "name": "laurus-api",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --exec \"ts-node --files\" src/server.ts",
        "dev:full": "npm run db:migrate && concurrently \"npm run dev\" \"npm --prefix frontend run dev\" -n api,frontend -c green,blue",
        "build": "npm run test:ci && tsc",
        "start": "node dist/server.js",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "ts-node src/db/migrate.ts",
        "db:sync": "npm run db:generate && npm run db:migrate",
        "seed": "ts-node --files src/dev/seed.ts",
        "seed:10": "ts-node --files src/dev/seed.ts 10",
        "seed:100": "ts-node --files src/dev/seed.ts 100",
        "seed:1000": "ts-node --files src/dev/seed.ts 1000",
        "test": "node ./node_modules/jest/bin/jest.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --runInBand --coverage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "basic-ftp": "^5.1.0",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.36.4",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "mysql2": "^3.12.0",
        "resend": "^6.6.0",
        "translation-check": "^1.1.0",
        "typescript": "^5.7.3",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.1",
        "@types/jest": "^29.5.14",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/multer": "^2.0.0",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "concurrently": "^8.2.2",
        "drizzle-kit": "^0.30.0",
        "eslint": "^9.19.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2"
    }
}
